  <script>
    // FIXED maintenance end date in Central Time (CT)
    // Example: maintenance started Oct 25, 2025 11:00 AM CT, ends 48 hours later
    const targetDate = new Date('2025-10-27T11:00:00-05:00'); // CT is UTC-5

    function updateCountdown() {
      const nowCT = new Date();
      const distance = targetDate - nowCT;

      if (distance < 0) {
        document.getElementById('countdown').innerHTML = "We're back online!";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById('countdown').innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s remaining`;
    }

    // Update every second
    setInterval(updateCountdown, 1000);
    updateCountdown(); // Initial call
  </script>
