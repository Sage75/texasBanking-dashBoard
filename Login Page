  <!-- Step 1: Email -->
  <div id="cbm-step-email">
    <input type="email" id="cbm_user_email" placeholder="Enter your registered email" required />
    <button type="button" id="cbm_send_btn">Send OTP</button>
    <div class="cbm-forgot">Forgot your email? <a href="https://texascreditbenchmark.com/get-in-touch/">Contact Support</a></div>
  </div>

  <!-- Step 2: OTP -->
  <div id="cbm-step-otp" style="display:none;">
    <input type="text" id="cbm_otp_code" placeholder="Enter OTP received in email" required />
    <button type="button" id="cbm_verify_btn">Verify OTP</button>
    <div class="cbm-subtext">
      Didn’t receive OTP? <span id="cbm_timer">Wait 60s…</span>
    </div>
  </div>

  <p class="cbm-msg" id="cbm_msg"></p>
