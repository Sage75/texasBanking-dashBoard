<script>
(function () {
  const ajaxURL = '/wp-admin/admin-ajax.php';

  const emailInp   = document.getElementById('cbm_user_email');
  const otpInp     = document.getElementById('cbm_otp_code');
  const msgBox     = document.getElementById('cbm_msg');
  const stepEmail  = document.getElementById('cbm-step-email');
  const stepOtp    = document.getElementById('cbm-step-otp');
  const sendBtn    = document.getElementById('cbm_send_btn');
  const verifyBtn  = document.getElementById('cbm_verify_btn');
  const timerSpan  = document.getElementById('cbm_timer');

  let timer;

  function msg(text, color = '#0073aa') {
    msgBox.style.color = color;
    msgBox.textContent = text;
  }

  function lock(btn, state, label) {
    btn.disabled = state;
    btn.textContent = state ? 'Please wait…' : label;
  }

  function urlenc(obj) {
    return new URLSearchParams(obj).toString();
  }

  function startCountdown(seconds) {
    let remaining = seconds;
    timerSpan.textContent = `Wait ${remaining}s…`;
    sendBtn.disabled = true;

    timer = setInterval(() => {
      remaining--;
      timerSpan.textContent = `Wait ${remaining}s…`;
      if (remaining <= 0) {
        clearInterval(timer);
        timerSpan.textContent = 'You can resend the OTP.';
        sendBtn.disabled = false;
      }
    }, 1000);
  }

  // ✅ Send OTP
  sendBtn.addEventListener('click', () => {
    const email = emailInp.value.trim().toLowerCase();
    if (!email) return msg('Please enter a valid email', 'red');

    lock(sendBtn, true, 'Please wait…');
    fetch(ajaxURL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: urlenc({ action: 'send_otp', user_email: email })
    })
    .then(r => r.json())
    .then(res => {
      lock(sendBtn, false, 'Send OTP');
      if (res.success) {
        msg('OTP sent! Check your inbox.');
        stepEmail.style.display = 'none';
        stepOtp.style.display = 'block';
        startCountdown(60); // ⏱ Start timer
      } else {
        msg(res.data || 'Server error', 'red');
      }
    })
    .catch(() => {
      lock(sendBtn, false, 'Send OTP');
      msg('Network error – is admin-ajax.php reachable?', 'red');
    });
  });

  // ✅ Verify OTP
  verifyBtn.addEventListener('click', () => {
    const email = emailInp.value.trim().toLowerCase();
    const otp   = otpInp.value.trim();
    if (!otp) return msg('Enter the OTP', 'red');

    lock(verifyBtn, true, 'Please wait…');
    fetch(ajaxURL, {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: urlenc({ action: 'verify_otp', user_email: email, otp_code: otp })
    })
    .then(r => r.json())
    .then(res => {
      lock(verifyBtn, false, 'Verify OTP');
      if (res.success) {
        const allowedEmails = [
              'dalalkamal6160@gmail.com',
              'rohintonrp@gmail.com',

          'vinavp9@gmail.com', 'vp_atm@yahoo.com',
          'j.a.rajput1966@gmail.com',
          'femina29b@gmail.com', 'aadhyasharma249@gmail.com',
          'sagarmehra0089@gmail.com', 'creditbenchmark420@gmail.com',
          'honey11chhatrala@gmail.com', 'shalinbaranda@gmail.com',
          'shalinbaranda@yahoo.com',
          'shreyansh02kharadi@outlook.com',
          'kalpesh19821@outlook.com','dipakmlv76@gmail.com',
          'Kdarjiuae@gmail.com','pgsuthar101111@gmail.com',
          'rajildekate8@gmail.com'
        ];

        if (!allowedEmails.includes(email)) {
          return msg('Access denied: Email not authorized', 'red');
        }

        msg('Verified! Redirecting…');
        setTimeout(() => { window.location.href = '/dashboard'; }, 1000);
      } else {
        msg('OTP invalid or expired', 'red');
      }
    })
    .catch(() => {
      lock(verifyBtn, false, 'Verify OTP');
      msg('Network error – check console', 'red');
    });
  });
})();
</script>
