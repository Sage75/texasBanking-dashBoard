    background: #fff;
  }

  .cbm-otp-box button {
    width: 100%;
    background: #0073aa;
    color: #fff;
    border: none;
    padding: 12px;
    font-size: 16px;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s ease, transform 0.1s;
  }

  .cbm-otp-box button:hover {
    background: #005b8e;
    transform: scale(1.02);
  }

  .cbm-msg {
    margin-top: 12px;
    font-size: 14px;
    min-height: 22px;
    color: #0073aa;
