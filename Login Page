    letter-spacing: 0.5px;
  }

  .cbm-otp-box input {
    width: 100%;
    padding: 12px 14px;
    margin: 14px 0;
    font-size: 15px;
    border: 1px solid #ccd7e3;
    border-radius: 12px;
    transition: border-color 0.2s, box-shadow 0.2s;
    background: #f9fcff;
  }

  .cbm-otp-box input:focus {
    outline: none;
