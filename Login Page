    background-size: cover;
    position: relative;
    min-height: 100vh;
  }

  /* Overlay */
  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 0;
  }

  .cbm-otp-box {
    width: 100%;
    max-width: 430px;
    background: rgba(255, 255, 255, 0.97);
    padding: 40px 30px 35px;
    border-radius: 18px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    text-align: center;
    animation: fadeIn 0.6s ease;
    border-top: 5px solid #0073aa;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 1;
    margin: 80px auto;
  }

  .cbm-otp-box .logo {
    margin: 0 auto 18px;
  }

  .cbm-otp-box .logo img {
