<script>
/* =========================================================
   üìå POPUP MODAL HELPERS
   ========================================================= */
function showPopup() {
  document.getElementById("popupModal").style.display = "flex";
}
function hidePopup() {
  document.getElementById("popupModal").style.display = "none";
}

/* =========================================================
   üé® ACTIVATE LUCIDE ICONS
   ========================================================= */
lucide.createIcons();

/* =========================================================
   üìÇ SIDEBAR NAVIGATION & TAB SWITCHING
   ========================================================= */
const navItems   = document.querySelectorAll('.nav-item');
const tabSections = document.querySelectorAll('.tab-section');

navItems.forEach(item => {
  item.addEventListener('click', () => {
    navItems.forEach(i => i.classList.remove('active'));
    tabSections.forEach(s => s.classList.remove('active'));

    item.classList.add('active');
    const tabId = item.getAttribute('data-tab');
    showTab(tabId);
    document.getElementById('currentPageTitle').textContent =
      tabId.charAt(0).toUpperCase() + tabId.slice(1);
  });
});

function showTab(tabId) {
  tabSections.forEach(tab => tab.style.display = 'none');
  const target = document.getElementById(tabId);
  if (target) {
    target.style.display = 'block';
    target.classList.add('active');
  }
  if (tabId === 'bankStatement') loadBankStatement();
  if (tabId === 'profile')       loadUserProfile();
  if (tabId === 'transaction')   loadTransactions();
}

/* =========================================================
   üîí HTML ESCAPE HELPER
   ========================================================= */
function escapeHtml(text) {
  return typeof text !== "string" ? "" : text
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;")
    .replace(/"/g, "&quot;")
    .replace(/'/g, "&#039;");
}

/* =========================================================
   üë§ LOAD USER PROFILE
   ========================================================= */
function loadUserProfile() {
  fetch('/wp-admin/admin-ajax.php?action=get_user_profile')
    .then(res => res.json())
    .then(response => {
      if (!response.success)
        return alert('‚ùå ' + (response.data?.message || 'Could not load profile.'));
      const d = response.data;
      document.getElementById('profileFullName').textContent = d.full_name  || '-';
      document.getElementById('profileEmail')   .textContent = d.email      || '-';
      document.getElementById('profilePhone')   .textContent = d.phone      || '-';
      document.getElementById('ibannumber')   .textContent = d.iban_number      || '-';
      document.getElementById('profileCountry') .textContent = d.country    || '-';
      document.getElementById('profileState')   .textContent = d.state      || '-';
      document.getElementById('profileCity')    .textContent = d.city       || '-';
      document.getElementById('profileZip')     .textContent = d.zip        || '-';
    });
}

/* =========================================================
   üßæ LOAD BANK‚ÄëSTATEMENT TABLE
   ========================================================= */
function loadBankStatement() {
  const tbody = document.getElementById("statementBody");
  if (!tbody) return;
  tbody.innerHTML = `<tr><td colspan="13">Loading...</td></tr>`;

  fetch('/wp-admin/admin-ajax.php?action=get_all_recipient_data')
    .then(res => res.json())
    .then(data => {
      tbody.innerHTML = '';
      if (!data.success || !Array.isArray(data.data) || !data.data.length) {
        tbody.innerHTML = `<tr><td colspan="13">No data found.</td></tr>`;
        return;
      }
      const frag = document.createDocumentFragment();
      data.data.forEach(row => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${escapeHtml(row.user_email)}</td>
          <td>${escapeHtml(row.full_name)}</td>
          <td>${escapeHtml(row.phone         || '-')}</td>
          <td>${escapeHtml(row.country       || '-')}</td>
          <td>${escapeHtml(row.bank_name)}</td>
          <td>${escapeHtml(row.account_number)}</td>
          <td>${escapeHtml(row.account_type)}</td>
          <td>${escapeHtml(row.currency)}</td>
          <td>${escapeHtml(row.swift         || '-')}</td>
          <td>${escapeHtml(row.ifsc          || '-')}</td>
          <td>$${parseFloat(row.transfer_amount || 0).toFixed(2)}</td>
          <td>${escapeHtml(row.payment_method)}</td>
          <td>${escapeHtml(row.created_at)}</td>`;
        frag.appendChild(tr);
      });
      tbody.appendChild(frag);
    })
    .catch(err => {
      console.error('Fetch error:', err);
      tbody.innerHTML = `<tr><td colspan="13">Error loading data.</td></tr>`;
    });
}

/* =========================================================
   üí≥ LOAD TRANSACTIONS TABLE
   ========================================================= */
function loadTransactions() {
  const tbody = document.getElementById("transactionBody");
  if (!tbody) return;
  tbody.innerHTML = `<tr><td colspan="5">Loading...</td></tr>`;

  fetch('/wp-admin/admin-ajax.php?action=get_transfer_history')
    .then(res => res.json())
    .then(data => {
      tbody.innerHTML = '';
      if (!data.success || !data.data.length) {
        tbody.innerHTML = `<tr><td colspan="5">No history found.</td></tr>`;
        return;
      }
      data.data.forEach(row => {
        tbody.innerHTML += `
          <tr>
            <td>${escapeHtml(row.full_name)}</td>
            <td>${escapeHtml(row.account_number)}</td>
            <td>$${parseFloat(row.transfer_amount).toFixed(2)}</td>
            <td>${escapeHtml(row.payment_method)}</td>
            <td>${escapeHtml(row.created_at)}</td>
          </tr>`;
      });
    })
    .catch(err => {
      console.error('Transaction fetch error:', err);
      tbody.innerHTML = `<tr><td colspan="5" style="color:red;">Error loading history</td></tr>`;
    });
}

/* =========================================================
   üí∞ FETCH USER LIVE BALANCE
   ========================================================= */
function fetchUserLiveBalance() {
  const data = new FormData();
  data.append('action', 'get_user_balance');
  fetch('/wp-admin/admin-ajax.php', {
    method: 'POST',
    credentials: 'same-origin',
    body: data
  })
    .then(res => res.json())
    .then(response => {
      const el = document.getElementById('live-balance');
      if (!el) return;
      if (response.success) {
        const balance = parseFloat(response.data.balance || 0)
          .toLocaleString('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 2 });
        el.innerHTML = `${balance} <span class="change" id="balanceChange"></span>`;
      } else {
        el.innerHTML = '$0.00 <span class="change">‚Äì</span>';
      }
    })
    .catch(err => {
      console.error('Balance fetch error:', err);
      const el = document.getElementById('live-balance');
      if (el) el.innerHTML = '$0.00 <span class="change">‚Äì</span>';
    });
}
document.addEventListener('DOMContentLoaded', fetchUserLiveBalance);

/* =========================================================
   üîÑ MULTI‚ÄëSTEP RECIPIENT FORM NAV
   ========================================================= */
function nextStep(current) {
  document.getElementById(`step${current}`)    .style.display = 'none';
  document.getElementById(`step${current + 1}`).style.display = 'block';
}
function prevStep(current) {
  document.getElementById(`step${current}`)    .style.display = 'none';
  document.getElementById(`step${current - 1}`).style.display = 'block';
}

/* =========================================================
   üöÄ DOMContentLoaded: INITIAL LOAD & FORM SUBMISSIONS
   ========================================================= */
document.addEventListener('DOMContentLoaded', () => {
  /* Initial bank‚Äëstatement load */
  loadBankStatement();

  /* ----- Recipient Form ----- */
  const recipientForm = document.getElementById('recipientForm');
  if (recipientForm) {
    recipientForm.addEventListener('submit', function (e) {
      e.preventDefault();
      fetch('/wp-admin/admin-ajax.php?action=add_recipient', {
        method: 'POST',
        body: new FormData(recipientForm)
      })
      .then(res => res.json())
      .then(response => {
        if (response.success) {
          alert('‚úÖ Transfer successful!');
          fetchUserLiveBalance();
          recipientForm.reset();
          for (let i = 1; i <= 4; i++) {
            const step = document.getElementById(`step${i}`);
            step.style.display = (i === 1 ? 'block' : 'none');
          }
        } else {
          alert('‚ùå Error: ' + (response.data?.message || 'Unknown error'));
        }
      })
      .catch(() => alert('‚ùå Submission failed.'));
    });
  }

  /* ----- Transfer Form ----- */
  const transferForm = document.getElementById('transferForm');
  if (transferForm) {
    transferForm.addEventListener('submit', function (e) {
      e.preventDefault();
      fetch('/wp-admin/admin-ajax.php?action=send_transfer', {
        method: 'POST',
        body: new FormData(transferForm)
      })
      .then(r => r.json())
      .then(res => {
        if (res.success) {
          alert('‚úÖ Transfer successful!');
          transferForm.reset();
          fetchUserLiveBalance();
        } else {
          alert('‚ùå Transfer failed: ' + (res.data?.message || 'Unknown error'));
        }
      })
      .catch(() => alert('‚ùå Transfer failed.'));
    });
  }
});

/* =========================================================
   üí≥ CARD: FLIP, TOGGLE STATUS & BLUR FIELDS
   ========================================================= */
document.addEventListener('DOMContentLoaded', () => {
  const cardToggle        = document.getElementById('cardToggle');
  const flipButton        = document.getElementById('flipButton');
  const cardFlipContainer = document.getElementById('cardFlipContainer');

  fetch('/wp-admin/admin-ajax.php?action=get_card_data')
    .then(res => res.json())
    .then(data => {
    //   if (!data.success) return alert('‚úÖYour Card is Available Now.');
      const card = data.data;
      document.querySelector('.card-number')     .innerHTML = formatCardNumber(card.CardNumber);
      document.querySelector('.cardholder-name') .textContent = card.CardHolderName;
      document.querySelector('.valid-date')      .textContent = card.Date;
      document.querySelector('.cvc-number')      .textContent = card.CVV;
      cardToggle.checked = card.Status === 'active';
      updateSensitiveVisibility();                 // blur/unblur on load
    });

  if (flipButton && cardFlipContainer) {
    flipButton.addEventListener('click', () => {
      cardFlipContainer.classList.toggle('flipped');
    });
  }

  if (cardToggle) {
    cardToggle.addEventListener('change', () => {
      const newStatus = cardToggle.checked ? 'active' : 'inactive';
      fetch('/wp-admin/admin-ajax.php?action=toggle_card_status', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: `status=${encodeURIComponent(newStatus)}`
      }).then(updateSensitiveVisibility);
    });
  }

  /* Helper: blur/unblur fields based on checkbox */
  const sensitiveFields = [
    document.querySelector('.card-number'),
    document.querySelector('.cardholder-name'),
    document.querySelector('.valid-date'),
    document.querySelector('.cvc-number')
  ];
  function updateSensitiveVisibility() {
    const isActive = cardToggle.checked;
    sensitiveFields.forEach(field => {
      if (field) field.classList.toggle('blur', !isActive);
    });
  }
  /* Helper: format card number */
  function formatCardNumber(num) {
  return num.replace(/(\d{4})(?=\d)/g, '$1 ')  // Adds space after every 4 digits
            .split(' ')                       
            .map(d => `<span class="sensitive">${d}</span>`)  
            .join(' ');  
}
});

/* =========================================================
   üîì LOGOUT HANDLER
   ========================================================= */
document.addEventListener('DOMContentLoaded', () => {
  const logoutBtn = document.getElementById('logoutBtn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', () => {
      if (confirm('Are you sure you want to log out?')) {
        fetch('/wp-admin/admin-ajax.php?action=user_logout', {
          method: 'POST',
          credentials: 'same-origin'
        }).finally(() => {
          window.location.href = '/login';
        });
      }
    });
  }
});

/* =========================================================
   üõéÔ∏è NOTIFICATION DROPDOWN TOGGLE
   ========================================================= */
function toggleNotificationDropdown() {
  const dd = document.getElementById('notificationDropdown');
  dd.style.display = dd.style.display === 'block' ? 'none' : 'block';
}
window.addEventListener('click', e => {
  const icon  = e.target.closest('[onclick=\"toggleNotificationDropdown()\"]');
  const drop  = document.getElementById('notificationDropdown');
  if (!icon && drop && drop.style.display === 'block') drop.style.display = 'none';
});

/* =========================================================
   üôç‚Äç‚ôÇÔ∏è USER DROPDOWN TOGGLE
   ========================================================= */
function toggleUserDropdown() {
  const dd = document.getElementById('userDropdown');
  dd.style.display = dd.style.display === 'block' ? 'none' : 'block';
}
window.onclick = e => {
  if (!e.target.closest('#userDropdown') &&
      !e.target.closest('[onclick=\"toggleUserDropdown()\"]')) {
    document.getElementById('userDropdown').style.display = 'none';
  }
};

/* =========================================================
   üëÅÔ∏è CARD SENSITIVE FIELD BLUR VIA CHECKBOX (GLOBAL)
   ========================================================= */
const cardToggle = document.getElementById('cardToggle');
if (cardToggle) {
  const sensitiveFields = [
    document.querySelector('.card-number'),
    document.querySelector('.cardholder-name'),
    document.querySelector('.valid-date'),
    document.querySelector('.cvc-number')
  ];
  const updateSensitiveVisibility = () => {
    const isActive = cardToggle.checked;
    sensitiveFields.forEach(f => {
      if (f) f.classList.toggle('blur', !isActive);
    });
  };
  updateSensitiveVisibility();          // run once on load
  cardToggle.addEventListener('change', () => {
    const newStatus = cardToggle.checked ? 'active' : 'inactive';
    fetch('/wp-admin/admin-ajax.php?action=toggle_card_status', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: `status=${encodeURIComponent(newStatus)}`
    });
    updateSensitiveVisibility();
  });
}


/* =========================================================
   Download button  for statement
   ========================================================= */
 document.getElementById('downloadCsvBtn').addEventListener('click', function () {
    const table = document.getElementById('statementTable');
    let csv = [];
    const rows = table.querySelectorAll('tr');

    for (let i = 0; i < rows.length; i++) {
      const row = [], cols = rows[i].querySelectorAll('th, td');
      for (let j = 0; j < cols.length; j++) {
        let cellText = cols[j].innerText.trim();

        // Special handling for Amount and Date
        if (j === 10) { // Amount column
          // Ensure number is plain text so Excel doesn't round or truncate it
          cellText = `"${cellText.replace(/,/g, '')}"`;
        } else if (j === 12) { // Date column
          // Prefix with apostrophe to keep Excel from auto-formatting it
          cellText = `'${cellText}'`;
        } else {
          // Escape quotes and wrap
          cellText = `"${cellText.replace(/"/g, '""')}"`;
        }

        row.push(cellText);
      }
      csv.push(row.join(','));
    }

    const csvFile = new Blob([csv.join('\n')], { type: 'text/csv' });

    const downloadLink = document.createElement('a');
    downloadLink.href = URL.createObjectURL(csvFile);
    downloadLink.download = 'bank-statement.csv';
    document.body.appendChild(downloadLink);
    downloadLink.click();
    document.body.removeChild(downloadLink);
  });

/* =========================================================
   Dashboard chart
   ========================================================= */

   
   
   
</script>

