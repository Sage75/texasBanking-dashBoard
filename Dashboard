          <input type="text" name="bank_address" placeholder="Bank Address" required style="width:100%; padding:10px; margin-bottom:15px; border:1px solid #ccc; border-radius:6px;">
          <input type="text" name="account_number" placeholder="Account Number / IBAN" required style="width:100%; padding:10px; margin-bottom:15px; border:1px solid #ccc; border-radius:6px;">
          <input type="text" name="account_type" placeholder="Account Type" required style="width:100%; padding:10px; margin-bottom:15px; border:1px solid #ccc; border-radius:6px;">
